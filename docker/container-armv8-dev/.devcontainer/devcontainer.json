{
  "name": "ros2-examples-armv8-dev",
  "dockerComposeFile": [
    "docker-compose.yaml"
  ],
  // Only start this service
  "service": "ros2-examples-armv8-dev",
  "runServices": [
    "ros2-examples-armv8-dev"
  ],
  // Stop container if VS Code is shut down
  "shutdownAction": "stopCompose",
  // Configure the container's IDE
  "customizations": {
    "vscode": {
      "extensions": [
        "vscode-icons-team.vscode-icons",
        "github.copilot",
        "ms-python.python",
        "njpwerner.autodocstring",
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-vscode.makefile-tools",
        "ms-iot.vscode-ros",
        "ms-azuretools.vscode-docker",
        "timonwong.shellcheck",
        "redhat.vscode-yaml",
        "dotjoshjohnson.xml",
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag",
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",
        "aaron-bond.better-comments",
        "jeff-hykin.better-syntax",
        "gruntfuggly.todo-tree",
        "eamodio.gitlens",
        "donjayamanne.githistory",
        "zachflower.uncrustify",
        "shardulm94.trailing-spaces"
      ],
      "settings": {
        // Use Bash as the default shell in the integrated terminal
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          },
          "zsh": {
            "path": "/bin/zsh"
          }
        },
        // Integrated terminal settings
        "terminal.integrated.fontFamily": "MesloLGS NF",
        "terminal.integrated.cursorStyle": "underline",
        "terminal.integrated.cursorBlinking": true,
        "workbench.colorCustomizations": {
          "terminal.background": "#111111",
          "terminal.foreground": "#FFFFFF",
          "terminal.ansiBlack": "#000000",
          "terminal.ansiBrightBlack": "#333333",
          "terminal.ansiBlue": "#4040ff",
          "terminal.ansiBrightBlue": "#1799f0",
          "terminal.ansiCyan": "#00FFFF",
          "terminal.ansiBrightCyan": "#00ffffde",
          "terminal.ansiGreen": "#00FF00",
          "terminal.ansiBrightGreen": "#36a10f",
          "terminal.ansiMagenta": "#FF00FF",
          "terminal.ansiBrightMagenta": "#9c4f7f",
          "terminal.ansiRed": "#FF0000",
          "terminal.ansiBrightRed": "#ff5640",
          "terminal.ansiWhite": "#FFFFFF",
          "terminal.ansiBrightWhite": "#FDF4C1",
          "terminal.ansiYellow": "#FFFF00",
          "terminal.ansiBrightYellow": "#FAC03B"
        }
      }
    }
  },
  // Start the VS Code instance in the container's workspace
  "workspaceFolder": "/home/lee/workspace",
  // 让 docker-compose 的 command 生效，从而自动执行 start_vnc.sh
  "overrideCommand": false
}